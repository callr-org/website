local_rfile <- function(uris, drop=TRUE) {
  if (!isPackageInstalled("R.rsp")) {
    source("<%=urlroot%>/install#R.rsp")
  }
  outputs <- list()
  for (uri in uris) {
    pp <- R.rsp::rfile(uri)
    mprint(pp)
    outputs[[uri]] <- pp
  }

  if (drop && length(outputs) == 1L) {
    outputs <- outputs[[1]]
  }

  outputs
}

local_rsource <- function(uris) {
  if (!isPackageInstalled("R.rsp")) {
    source("<%=urlroot%>/install#R.rsp")
  }
  for (uri in uris) {
    R.rsp::rsource(uri)
  }
}
